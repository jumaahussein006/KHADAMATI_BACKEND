# =========================
# Environment
# =========================
PORT=5000
NODE_ENV=development

# =========================
# Database (Platform-Agnostic)
# =========================
# CLOUD: Set DATABASE_URL (takes priority over individual credentials)
DATABASE_URL=

# LOCAL: MySQL/XAMPP credentials (used when DATABASE_URL is empty)
DB_SYNC=false
DB_SYNC_FORCE=false
DB_HOST=localhost
DB_PORT=3306
DB_NAME=khadamati
DB_USER=root
DB_PASSWORD=

# =========================
# JWT Secrets
# =========================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRE=7d

# =========================
# File Upload
# =========================
UPLOAD_PATH=uploads
MAX_FILE_SIZE=5242880

# =========================
# Frontend URL (for CORS)
# =========================
FRONTEND_URL=http://localhost:5173
